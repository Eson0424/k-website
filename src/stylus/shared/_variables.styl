$narrowScreenMaxWidth = $wideScreenMinWidth - 1
$extraWideScreenMinWidth = 1330px
$extraWidePageWidth = 1290px
$widePageWidth = 1240px
$narrowPageWidth = 980px
/* End of page width */
/* z-index section */
$zIndexOverMuseUI = 30000000
$zIndexToast = $zIndexOverMuseUI + 100
$zIndexSideBar = $zIndexToast + 100
// MuseUI overlays range: ~20141223
