/* Colors */
/* TODO Rename as $color-w, etc. */
$w = #ffffff
$lgy = #f3f3f3
$egy = #e5e5e5
$gy = #e2e2e2
$cgy = #cccccc
$dgy = #8e8e8e
$bgy = #3e3e3e
$b = #000000
$lbr = #85796e
$br = #4e3c2d
$kh = #b3865a
$y = #ffcb05
$ly = #fffcdf
$o = #e54e26
$od = #e34f26
$or = #ff8200
$bu = #3e75d9
$p = #783875
$g = #009342
$color-transparent = alpha($w, 0)
// Instead of keyword transparent or rgba(0,0,0,0) for Safari bug:
// https://ambientimpact.com/web/snippets/safari-bug-with-gradients-that-fade-to-transparent
$br-booking-widget = $bgy
$bu-asiamiles = #272f38
$y-asiamiles = #facf00
$bu-facebook = #3a5795
$r-google-plus = #bd3d2f
/* Font weights */
$font-weight-L = 300
$font-weight-N = 400
$font-weight-M = 500
$font-weight-SB = 600
$font-weight-B = 700
$font-weight = {}

for $val in 'L' 'N' 'M' 'SB' 'B'
  $font-weight[$val] = lookup('$font-weight-' + $val)

/* Font family */
/* cSpell:disable */
/*
$font-family-or-tc = Lato, Arial, "Noto Sans TC", "Noto Sans SC", "PingFang TC", "PingFang SC", "Microsoft JhengHei", sans-serif
$font-family-or-sc = Lato, Arial, "Noto Sans SC", "Noto Sans TC", "PingFang SC", "PingFang TC", "Hiragino Sans GB", STHeiTi, "Microsoft JhengHei", sans-serif
$font-family-or-ja = Lato, Arial, "Noto Sans JP", "Hiragino Kaku Gothic ProN", Meiryo, Osaka, "MS PGothic", "Noto Sans TC", sans-serif
*/
$font-family-or-tc = Lato, Arial, sans-serif
$font-family-or-sc = Lato, Arial, sans-serif
$font-family-or-ja = Lato, Arial, sans-serif
$font-family-asiamiles-tc-tokens = 'Microsoft JhengHei', 'PingFang TC', 'Heiti TC'
$font-family-asiamiles-sc-tokens = 'Microsoft YaHei', 'PingFang SC', 'Heiti SC'
$font-family-asiamiles-en-tokens = 'Open Sans', Arial
$font-family-asiamiles-ja-tokens = 'Source Hans Sans'
$font-family-asiamiles-tc = $font-family-asiamiles-en-tokens, $font-family-asiamiles-tc-tokens, $font-family-asiamiles-sc-tokens, sans-serif
$font-family-asiamiles-sc = $font-family-asiamiles-en-tokens, $font-family-asiamiles-sc-tokens, $font-family-asiamiles-tc-tokens, sans-serif
$font-family-asiamiles-ja = $font-family-asiamiles-en-tokens, $font-family-asiamiles-ja-tokens, $font-family-asiamiles-tc-tokens, sans-serif
/* cSpell:enable */
$borderRadius = 8px
/* Layout Dimensions */
